{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "{{ page.title }}",
  "name": "{{ page.title }}",
  "description": {% if page.description and page.description != "" %}"{{ page.description | strip_html | strip_newlines | escape }}"{% else %}"{{ site.seo.description[page.lang] | escape }}"{% endif %},
  "datePublished": "{{ page.date | date_to_xmlschema }}",
  "dateModified": {% if page.modified_date %}"{{ page.modified_date | date_to_xmlschema }}"{% else %}"{{ page.date | date_to_xmlschema }}"{% endif %},
  "author": {
    "@type": "Person",
    "name": "{{ site.author.name }}",
    "jobTitle": "{{ site.author.jobTitle }}",
    "worksFor": {
      "@type": "Organization",
      "name": "{{ site.author.company }}"
    },
    "alumniOf": {
      "@type": "EducationalOrganization",
      "name": "{{ site.author.university }}"
    }
  },
  "publisher": {
    "@type": "Person",
    "name": "{{ site.author.name }}",
    "logo": {
      "@type": "ImageObject",
      "url": "{{ site.url }}{{ site.author.logo.url }}",
      "width": {{ site.author.logo.width }},
      "height": {{ site.author.logo.height }}
    }
  },
  {% if page.image %}
  "image": {
    "@type": "ImageObject",
    "url": "{{ site.url }}{{ page.image }}",
    "width": {{ site.images.defaultWidth }},
    "height": {{ site.images.defaultHeight }}
  },
  {% else %}
  "image": {
    "@type": "ImageObject",
    "url": "{{ site.url }}{{ site.images.ogImage }}",
    "width": {{ site.images.defaultWidth }},
    "height": {{ site.images.defaultHeight }}
  },
  {% endif %}
  "url": "{{ page.url | absolute_url }}",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ page.url | absolute_url }}"
  },
  "inLanguage": "{{ page.lang }}",
  "keywords": [
    {% if page.categories.size > 0 %}
      {% for category in page.categories %}"{{ category }}"{% unless forloop.last %},{% endunless %}{% endfor %},
    {% endif %}
    {% for keyword in site.seo.defaultKeywords %}"{{ keyword }}"{% unless forloop.last %},{% endunless %}{% endfor %}
  ],
  "articleSection": "Technology",
  "wordCount": {{ page.content | number_of_words }}
}
